<?xml version="1.0" encoding="utf-8"?><ScrollView    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".MainActivity">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:orientation="vertical"        android:background="@color/colorWhite">        <LinearLayout            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="vertical"            android:id="@+id/print"            android:layout_marginTop="1dp"            android:background="@color/colorWhite">            <LinearLayout                android:orientation="horizontal"                android:layout_width="match_parent"                android:layout_margin="1dp"                android:layout_height="wrap_content">                <TextView                    android:id="@+id/tvName"                    android:text="Name: "                    android:textSize="15dp"                    android:textColor="@color/bluebarry"                    android:textAllCaps="true"                    android:textStyle="bold"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <EditText                    android:id="@+id/txtName"                    android:hint="Enter Name"                    android:textColor="@color/bluebarry"                    android:backgroundTint="@color/bluebarry"                    android:textColorHint="@color/bluebarry"                    android:layout_width="match_parent"                    android:layout_height="wrap_content" />            </LinearLayout>            <LinearLayout                android:orientation="horizontal"                android:layout_margin="1dp"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:textAllCaps="true"                    android:id="@+id/tvId"                    android:text="ID: "                    android:textStyle="bold"                    android:textSize="15dp"                    android:textColor="@color/bluebarry"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <EditText                    android:id="@+id/txtID"                    android:hint="Enter ID"                    android:textColor="@color/bluebarry"                    android:backgroundTint="@color/bluebarry"                    android:textColorHint="@color/bluebarry"                    android:layout_width="match_parent"                    android:layout_height="wrap_content" />            </LinearLayout>            <LinearLayout                android:orientation="horizontal"                android:layout_width="match_parent"                android:layout_margin="1dp"                android:layout_height="wrap_content">                <TextView                    android:textSize="15dp"                    android:textColor="@color/bluebarry"                    android:textAllCaps="true"                    android:id="@+id/tvPhone"                    android:text="Phone: "                    android:textStyle="bold"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <EditText                    android:id="@+id/txtPhone"                    android:inputType="phone"                    android:hint="Enter Phone"                    android:textColor="@color/bluebarry"                    android:backgroundTint="@color/bluebarry"                    android:textColorHint="@color/bluebarry"                    android:layout_width="match_parent"                    android:layout_height="wrap_content" />            </LinearLayout>            <LinearLayout                android:orientation="horizontal"                android:layout_margin="1dp"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:textSize="15dp"                    android:textColor="@color/bluebarry"                    android:textAllCaps="true"                    android:id="@+id/tvPhone2"                    android:text="Phone 2: "                    android:textStyle="bold"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <EditText                    android:id="@+id/txtPhone2"                    android:hint="Enter Phone 2"                    android:inputType="phone"                    android:textColor="@color/bluebarry"                    android:backgroundTint="@color/bluebarry"                    android:textColorHint="@color/bluebarry"                    android:layout_width="match_parent"                    android:layout_height="wrap_content" />            </LinearLayout>            <LinearLayout                android:orientation="horizontal"                android:layout_width="match_parent"                android:layout_margin="1dp"                android:layout_height="wrap_content">                <TextView                    android:textSize="15dp"                    android:textColor="@color/bluebarry"                    android:textAllCaps="true"                    android:id="@+id/tvCity"                    android:text="City: "                    android:textStyle="bold"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <EditText                    android:id="@+id/txtCIty"                    android:textColor="@color/bluebarry"                    android:backgroundTint="@color/bluebarry"                    android:textColorHint="@color/bluebarry"                    android:hint="Enter City"                    android:layout_width="match_parent"                    android:layout_height="wrap_content" />            </LinearLayout>            <LinearLayout                android:orientation="horizontal"                android:layout_margin="1dp"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:textSize="15dp"                    android:textColor="@color/bluebarry"                    android:textAllCaps="true"                    android:id="@+id/tvAddress"                    android:text="Address: "                    android:textStyle="bold"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <EditText                    android:id="@+id/txtAddress"                    android:hint="Enter Address"                    android:layout_width="match_parent"                    android:textColor="@color/bluebarry"                    android:backgroundTint="@color/bluebarry"                    android:textColorHint="@color/bluebarry"                    android:layout_height="wrap_content" />            </LinearLayout>            <LinearLayout                android:orientation="horizontal"                android:layout_margin="1dp"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:textSize="15dp"                    android:textColor="@color/bluebarry"                    android:textAllCaps="true"                    android:id="@+id/tvDevice"                    android:text="Device: "                    android:textStyle="bold"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <EditText                    android:id="@+id/txtDevice"                    android:textColor="@color/bluebarry"                    android:backgroundTint="@color/bluebarry"                    android:textColorHint="@color/bluebarry"                    android:hint="Enter Device"                    android:layout_width="match_parent"                    android:layout_height="wrap_content" />            </LinearLayout>            <LinearLayout                android:orientation="horizontal"                android:layout_width="match_parent"                android:layout_margin="1dp"                android:layout_height="wrap_content">                <TextView                    android:textSize="15dp"                    android:textColor="@color/bluebarry"                    android:textAllCaps="true"                    android:id="@+id/tvAge"                    android:text="Age: "                    android:textStyle="bold"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <EditText                    android:id="@+id/txtAge"                    android:hint="Enter Age"                    android:inputType="number"                    android:textColor="@color/bluebarry"                    android:backgroundTint="@color/bluebarry"                    android:textColorHint="@color/bluebarry"                    android:layout_width="match_parent"                    android:layout_height="wrap_content" />            </LinearLayout>            <LinearLayout                android:orientation="horizontal"                android:layout_width="match_parent"                android:layout_margin="1dp"                android:layout_height="wrap_content">                <TextView                    android:textAllCaps="true"                    android:id="@+id/tvDate"                    android:text="Date: "                    android:textStyle="bold"                    android:textSize="15dp"                    android:textColor="@color/bluebarry"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <EditText                    android:id="@+id/txtDate"                    android:hint="Select Date"                    android:textColor="@color/bluebarry"                    android:backgroundTint="@color/bluebarry"                    android:textColorHint="@color/bluebarry"                    android:layout_width="match_parent"                    android:layout_height="wrap_content" />            </LinearLayout>            <LinearLayout                android:orientation="horizontal"                android:layout_width="match_parent"                android:layout_margin="1dp"                android:layout_height="wrap_content">                <TextView                    android:textSize="15dp"                    android:textColor="@color/bluebarry"                    android:textAllCaps="true"                    android:id="@+id/tvNotes"                    android:text="Notes: "                    android:textStyle="bold"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <EditText                    android:id="@+id/txtNotes"                    android:hint="Enter Notes"                    android:inputType="textMultiLine"                    android:textColor="@color/bluebarry"                    android:backgroundTint="@color/bluebarry"                    android:textColorHint="@color/bluebarry"                    android:layout_width="match_parent"                    android:layout_height="wrap_content" />            </LinearLayout>            <LinearLayout                android:orientation="horizontal"                android:layout_margin="1dp"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:textSize="15dp"                    android:textColor="@color/bluebarry"                    android:textAllCaps="true"                    android:id="@+id/tvPrice"                    android:text="Price: "                    android:textStyle="bold"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <EditText                    android:id="@+id/txtPrice"                    android:layout_width="match_parent"                    android:textColor="@color/bluebarry"                    android:backgroundTint="@color/bluebarry"                    android:textColorHint="@color/bluebarry"                    android:layout_height="wrap_content"                    android:hint="Enter Price" />            </LinearLayout>            <LinearLayout                android:orientation="horizontal"                android:layout_width="match_parent"                android:layout_margin="1dp"                android:layout_height="wrap_content">                <TextView                    android:id="@+id/tvPaymentNumber"                    android:text="Payment Number: "                    android:textSize="15dp"                    android:textStyle="bold"                    android:textColor="@color/bluebarry"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <EditText                    android:id="@+id/txtPaymentNumber"                    android:layout_width="match_parent"                    android:textColor="@color/bluebarry"                    android:backgroundTint="@color/bluebarry"                    android:textColorHint="@color/bluebarry"                    android:layout_height="wrap_content"                    android:hint="Enter Payment" />            </LinearLayout>            <LinearLayout                android:orientation="horizontal"                android:layout_margin="1dp"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:id="@+id/tvPaymentMethod"                    android:text="Payment Method: "                    android:textSize="15dp"                    android:textStyle="bold"                    android:textColor="@color/bluebarry"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <EditText                    android:id="@+id/txtPaymentMethod"                    android:layout_width="match_parent"                    android:textColor="@color/bluebarry"                    android:backgroundTint="@color/bluebarry"                    android:textColorHint="@color/bluebarry"                    android:layout_height="wrap_content"                    android:hint="Enter Payment" />            </LinearLayout>            <LinearLayout                android:orientation="horizontal"                android:layout_margin="1dp"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:id="@+id/tvNote1"                    android:text="Note 1: "                    android:textStyle="bold"                    android:textSize="15dp"                    android:textColor="@color/bluebarry"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <EditText                    android:textColor="@color/bluebarry"                    android:backgroundTint="@color/bluebarry"                    android:textColorHint="@color/bluebarry"                    android:id="@+id/txtNote1"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:hint="Note 1" />            </LinearLayout>            <LinearLayout                android:orientation="horizontal"                android:layout_margin="1dp"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:id="@+id/tvNote2"                    android:text="Note 2: "                    android:textSize="15dp"                    android:textStyle="bold"                    android:textColor="@color/bluebarry"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <EditText                    android:textColor="@color/bluebarry"                    android:backgroundTint="@color/bluebarry"                    android:textColorHint="@color/bluebarry"                    android:id="@+id/txtNote2"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:hint="Note 2" />            </LinearLayout>            <LinearLayout                android:orientation="horizontal"                android:layout_margin="1dp"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:id="@+id/tvNote3"                    android:text="Note 3: "                    android:textSize="15dp"                    android:textStyle="bold"                    android:textColor="@color/bluebarry"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <EditText                    android:textColor="@color/bluebarry"                    android:backgroundTint="@color/bluebarry"                    android:textColorHint="@color/bluebarry"                    android:id="@+id/txtNote3"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:hint="Note 3" />            </LinearLayout>            <LinearLayout                android:orientation="horizontal"                android:layout_margin="1dp"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:id="@+id/tvNote4"                    android:text="Note 4: "                    android:textSize="15dp"                    android:textStyle="bold"                    android:textColor="@color/bluebarry"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <EditText                    android:textColor="@color/bluebarry"                    android:backgroundTint="@color/bluebarry"                    android:textColorHint="@color/bluebarry"                    android:id="@+id/txtNote4"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:hint="Note 4" />            </LinearLayout>            <LinearLayout                android:orientation="horizontal"                android:layout_margin="1dp"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:id="@+id/tvNote5"                    android:text="Note 5: "                    android:textSize="15dp"                    android:textStyle="bold"                    android:textColor="@color/bluebarry"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content" />                <EditText                    android:textColor="@color/bluebarry"                    android:backgroundTint="@color/bluebarry"                    android:textColorHint="@color/bluebarry"                    android:id="@+id/txtNote5"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:hint="Note 5" />            </LinearLayout>        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            >            <Button                android:id="@+id/btnSave"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginTop="10dp"                android:layout_marginLeft="120dp"                android:backgroundTint="@color/colorWhite"                android:text="Save Data"                android:textColor="@color/green"                android:textStyle="bold" />            <Button                android:id="@+id/btnS"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:backgroundTint="@color/colorWhite"                android:text="@string/save_pdf"                android:layout_marginLeft="40dp"                android:layout_marginTop="10dp"                android:textColor="@color/green"                android:textStyle="bold" />        </LinearLayout>    </LinearLayout></ScrollView>